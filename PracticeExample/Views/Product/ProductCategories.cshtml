
@{
    ViewBag.Title = "ProductCategories";
}



@{
    var categories = new List<string> { "Electronics", "Stationary", "All Products" };
}

<h2>Select Product Category</h2>

<ul>
    @foreach (var category in categories)
    {
        <li><a href="@Url.Action("ProductList", "Product", new { category = category })">@category</a></li>
    }
</ul>